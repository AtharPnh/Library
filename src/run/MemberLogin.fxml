<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="431.0" prefWidth="317.0" style="-fx-background-color: #dedede;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="run.MemberLogin">
    <children>
        <Label fx:id="lblMember" alignment="CENTER" layoutX="117.0" layoutY="13.0" prefHeight="32.0" prefWidth="84.0" text="ورود عضو" textAlignment="CENTER">
            <font>
                <Font name="System Bold" size="18.0" />
            </font>
        </Label>
        <Label fx:id="lblUserName" alignment="CENTER" layoutX="117.0" layoutY="57.0" prefHeight="32.0" prefWidth="84.0" text="نام کاربری">
            <font>
                <Font name="System Bold" size="13.0" />
            </font>
        </Label>
        <TextField fx:id="txtUserName" layoutX="85.0" layoutY="89.0" prefHeight="32.0" prefWidth="149.0" promptText="نام کاربری" style="-fx-background-color: #ffff; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-style: solid;               -fx-border-width: 2; -fx-border-color: #719d7c;" />
        <TextField fx:id="txtPassword" layoutX="85.0" layoutY="178.0" prefHeight="32.0" prefWidth="149.0" promptText="رمز عبور" style="-fx-background-color: #ffff; -fx-background-radius: 10; -fx-border-radius: 10; -fx-border-style: solid;               -fx-border-width: 2; -fx-border-color: #719d7c;" />
        <Label fx:id="lblPassword" alignment="CENTER" layoutX="118.0" layoutY="141.0" prefHeight="32.0" prefWidth="84.0" text="رمز عبور">
            <font>
                <Font name="System Bold" size="13.0" />
            </font>
        </Label>
        <Label fx:id="lblForget" alignment="CENTER" layoutX="66.0" layoutY="226.0" prefHeight="32.0" prefWidth="191.0" text="رمز عبور خود را فراموش کرده اید؟" textFill="#356b41">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <Label fx:id="lblAccount" alignment="CENTER" layoutX="164.0" layoutY="355.0" prefHeight="32.0" prefWidth="141.0" text="آیا حساب کاربری ندارید؟">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Label>
        <Button fx:id="btnSignUp" layoutX="31.0" layoutY="355.0" mnemonicParsing="false" onAction="#pressSignUp" prefHeight="32.0" prefWidth="91.0" text="ایجاد حساب">
            <font>
                <Font name="System Bold" size="12.0" />
            </font>
        </Button>
      <Button fx:id="btnEnter" layoutX="114.0" layoutY="282.0" mnemonicParsing="false" onAction="#pressEnter" prefHeight="32.0" prefWidth="91.0" text="ورود">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Button>
    </children>
</AnchorPane>
